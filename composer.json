{
    "name": "formflowpro/formflow-pro-enterprise",
    "description": "Enterprise WordPress plugin for advanced form processing with Autentique integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "FormFlow Pro Team",
            "email": "dev@formflowpro.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "FormFlowPro\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FormFlowPro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs --standard=PSR12 includes/",
        "phpstan": "phpstan analyse includes/ --level=5",
        "format": "phpcbf --standard=PSR12 includes/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
